{
  "break": {
    "body": [
      "<br>$0"
    ],
    "description": "Make br tag.",
    "prefix": "br",
    "scope": "markdown"
  },
  "check box": {
    "body": [
      "* [${1:checked?|x,' '}] $0"
    ],
    "description": "Make checkbox.",
    "prefix": "check",
    "scope": "markdown"
  },
  "comment": {
    "body": [
      "<!-- $0 -->"
    ],
    "description": "Comment",
    "prefix": "comment",
    "scope": "markdown"
  },
  "textlint off on": {
    "body": [
      "<!-- textlint-disable -->",
      "$0",
      "<!-- textlint-enable -->"
    ],
    "description": "Stop textlint rule for a time.",
    "prefix": [
      "textlint-off-on"
    ],
    "scope": "markdown"
  },
  "zenn_alert": {
    "body": [
      "<!-- textlint-disable -->",
      ":::message alert",
      "$1",
      ":::",
      "<!-- textlint-enable -->",
      "$0"
    ],
    "description": "zenn alert message area.",
    "prefix": [
      "zenn_alert",
      "alert"
    ],
    "scope": "markdown"
  },
  "zenn_details": {
    "body": [
      "<!-- textlint-disable -->",
      "",
      ":::details $1",
      "$2",
      ":::",
      "<!-- textlint-enable -->",
      "$0"
    ],
    "description": "zenn message area.",
    "prefix": [
      "zenn_details",
      "details"
    ],
    "scope": "markdown"
  },
  "zenn_message": {
    "body": [
      "<!-- textlint-disable -->",
      ":::message",
      "$1",
      ":::",
      "<!-- textlint-enable -->",
      "$0"
    ],
    "description": "zenn message area.",
    "prefix": [
      "zenn_message",
      "message"
    ],
    "scope": "markdown"
  }
}

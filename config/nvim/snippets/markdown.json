{
  "break": {
    "body": [
      "<br>$0"
    ],
    "description": "Make br tag.",
    "prefix": "br",
    "scope": "markdown"
  },
  "check box": {
    "body": [
      "* [${1:checked?|x,' '}] $0"
    ],
    "description": "Make checkbox.",
    "prefix": "check",
    "scope": "markdown"
  },
  "comment": {
    "body": [
      "<!-- $0 -->"
    ],
    "description": "Comment",
    "prefix": "comment",
    "scope": "markdown"
  },
  "textlint off on": {
    "body": [
      "<!-- textlint-disable -->",
      "$0",
      "<!-- textlint-enable -->"
    ],
    "description": "Stop textlint rule for a time.",
    "prefix": [
      "textlint-off-on",
      "tl"
    ],
    "scope": "markdown"
  }
}

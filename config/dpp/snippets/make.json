{
  "help_generator": {
    "scope": "make",
    "prefix": "help_gen",
    "body": [
      ".DEFAULT_GOAL := help",
      "",
      ".PHONY := help",
      "# INFO: 参考サイト - https://postd.cc/auto-documented-makefile/",
      "help: ## subcommand list and description.",
      "\t@grep -E '^[a-zA-Z_-]+:.*?## .*\\$\\$' \\$(MAKEFILE_LIST) \\",
      "\t| awk 'BEGIN {FS = \":.*?## \"}; {printf \"\\033[36m%-30s\\033[0m %s\\n\", \\$\\$1, \\$\\$2}'",
      "$0"
    ],
    "description": "auto documentation of help."
  }
}

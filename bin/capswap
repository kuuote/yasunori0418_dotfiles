#!/usr/bin/env bash

echo "Swap Caps_Lock and Ctrl on your keyboard?"
read -p "Y/n: " answer

case $answer in
  "" | [Yy]* )
    [[ ! -f ~/.Xmodmap ]] && ln -sv ~/dotfiles/home/.Xmodmap ~/.Xmodmap && xmodmap ~/.Xmodmap
    ;;
  * )
    [[ -f ~/.Xmodmap ]] && xmodmap ~/.Xmodmap && unlink ~/.Xmodmap
    ;;
esac
